{
    "name" : "Key Management",
    "version": "1.0",
    "manifest_version" : 2,
    "description" : "Key Management Extension to secure social media apps",
    "browser_action":{
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "jquery-3.3.1.min.js",
                "sjcl.js",
                "main.js"
            ],
            "run_at": "document_end"
        }
    ]
}